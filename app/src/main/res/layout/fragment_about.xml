<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AboutFragment"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/who_we_are_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="About Us -\nHamaraDigitalIndia"
                android:fontFamily="@font/montserratbold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:layout_goneMarginTop="15dp"
                />

            <TextView
                android:id="@+id/who_we_are_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/who_we_are_tv"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Founded in 2022, our team is a balanced mix of resourceful strategists, creatives and analytical geniuses who help provide fast-paced growth solutions for brands from scratch. We come with an average 14+ years of experience in the digital space, producing precise results and growing ROI for various leading brands in the market."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/white"
                android:textSize="15dp"

                />
            <TextView
                android:id="@+id/content_2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/who_we_are_content_tv"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                app:layout_goneMarginLeft="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="@font/montserratregular"
                android:text="At HamaraDigitalIndia - \nEvery Idea Is Worth Exploring\nEvery Problem Is a New Opportunity\nEvery Solution Is a Fresh Beginning"
                android:textColor="#57C7F2"
                android:textSize="15dp"
                />
            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_2_tv"
                android:src="@drawable/about_us_banner"
                android:layout_marginTop="45dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                app:layout_constraintBottom_toBottomOf="@id/img3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="350dp"
                android:backgroundTint="#99000000"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <TextView
                        android:id="@+id/want_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Our Vision"
                        android:fontFamily="@font/montserratbold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/want_dec_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/want_tv"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Build Superior Products &amp; Services on Digital, giving most enhancing and compelling experience to our clientele."
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="#A4A49B"
                        android:textSize="15dp"
                        />
                    <TextView
                        android:id="@+id/want_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/want_dec_tv"
                        android:text="Our Mission"
                        android:fontFamily="@font/montserratbold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/want_dec_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/want_tv2"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="“Create a world class place for our people where they can achieve growth &amp; meet success. A place for our clients where they can witness superior results. A place for others to cherish their professional journey.”"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="#A4A49B"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/card"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:rowCount="2"
                android:columnCount="2"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginLeft="20dp"
                    >
                    <TextView
                        android:id="@+id/brand_count_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="3+"
                        android:fontFamily="@font/montserratbold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:layout_goneMarginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/brand_des_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/brand_count_tv"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Brands"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="#A4A49B"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginLeft="20dp"
                    >
                    <TextView
                        android:id="@+id/year_count_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="7+ Yrs"
                        android:fontFamily="@font/montserratbold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:layout_goneMarginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/year_des_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/year_count_tv"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Of Avg. Team Experience"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="#A4A49B"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/member_count_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="15+"
                        android:fontFamily="@font/montserratbold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:layout_goneMarginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/member_des_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/member_count_tv"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Members Team"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="#A4A49B"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/loc_count_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="1"
                        android:fontFamily="@font/montserratbold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        app:layout_goneMarginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/loc_des_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/loc_count_tv"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Locations"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:fontFamily="@font/montserratregular"
                        android:textColor="#A4A49B"
                        android:textSize="15dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>